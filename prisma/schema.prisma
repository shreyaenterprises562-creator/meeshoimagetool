generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* ===================================================== */
/* ✅ USER MODEL */
/* ===================================================== */

model User {
  id              String   @id @default(uuid())

  /* ================= LOGIN ================= */

  email           String   @unique
  password        String?
  role            String?   @default("user")

  /* ================= PREMIUM SYSTEM ================= */

  isPremium       Boolean  @default(false)
  premiumPlan     String?
  premiumUntil    DateTime?

  /* ================= CREDIT SYSTEM ================= */

  // Paid credits + remaining daily credits
  credits         Int      @default(0)

  // Max 2 reward ads per day
  adsWatched      Int      @default(0)

  // Track daily reset
  lastUsedAt      DateTime?

  /* ================= MEESHO CONNECT ================= */

  meeshoConnected Boolean  @default(false)
  meeshoCookies   Json?

  /* ================= META ================= */

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  /* ================= RELATIONS ================= */

  jobs            ImageJob[]
  payments        Payment[]
}

/* ===================================================== */
/* ✅ PAYMENT MODEL */
/* ===================================================== */

model Payment {
  id                  String   @id @default(uuid())

  userId              String
  razorpayOrderId     String   @unique
  razorpayPaymentId   String?  @unique

  amount              Int
  currency            String   @default("INR")

  // created | paid | failed
  status              String   @default("created")

  // premium | credits
  type                String

  // weekly | monthly | yearly | lifetime | credit_pack
  plan                String?

  creditsAdded        Int?

  createdAt           DateTime @default(now())

  /* ================= RELATION ================= */

  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/* ===================================================== */
/* ✅ IMAGE JOB MODEL */
/* ===================================================== */

model ImageJob {
  id         String   @id @default(uuid())

  userId     String
  baseImage  String

  category   String
  price      Int

  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  variants   Variant[]
}

/* ===================================================== */
/* ✅ VARIANT MODEL */
/* ===================================================== */

model Variant {
  id        String   @id @default(uuid())

  jobId     String
  imagePath String

  shipping  Float
  gst       Float
  total     Float

  isBest    Boolean  @default(false)

  job       ImageJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
}